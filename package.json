{
  "name": "StickerGuard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:release": "cd android && ./gradlew assembleRelease && cd ..",
    "android:bundle": "cd android && ./gradlew bundleRelease && cd ..",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "clean": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-* && npm start -- --reset-cache",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean:all": "rm -rf node_modules && rm -rf android/build && rm -rf android/app/build && npm run clean",
    "setup": "npm install",
    "type-check": "tsc --noEmit",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:emulators": "firebase emulators:start"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.76.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@react-navigation/native-stack": "^6.11.0",
    "react-native-safe-area-context": "^4.11.1",
    "react-native-screens": "^4.0.0",
    "@react-native-firebase/app": "^21.3.0",
    "@react-native-firebase/auth": "^21.3.0",
    "@react-native-firebase/firestore": "^21.3.0",
    "@react-native-firebase/functions": "^21.3.0",
    "@react-native-firebase/messaging": "^21.3.0",
    "@react-native-firebase/analytics": "^21.3.0",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-vision-camera": "^4.6.3",
    "@notifee/react-native": "^9.0.3",
    "zustand": "^5.0.2",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.76.1",
    "@react-native/eslint-config": "0.76.1",
    "@react-native/metro-config": "0.76.1",
    "@react-native/typescript-config": "0.76.1",
    "@react-native-community/cli": "^15.0.0",
    "@react-native-community/cli-platform-android": "^15.0.0",
    "@types/react": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "typescript": "5.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
